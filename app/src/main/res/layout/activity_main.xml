<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#14141c "
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="255dp"
                    android:layout_height="79dp"
                    android:paddingRight="150dp"
                    android:textAlignment="viewStart"
                    app:srcCompat="@drawable/img" />

                <Button
                    android:id="@+id/btnVolver4"
                    android:layout_width="wrap_content"
                    android:layout_height="47dp"
                    android:layout_gravity="center"
                    android:backgroundTint="#D7B34E"
                    android:gravity="center"
                    app:icon="@android:drawable/ic_menu_revert"
                    app:iconGravity="textStart"
                    app:iconSize="35dp"
                    app:iconTint="#FFFFFF" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:paddingTop="20dp"
                android:text="Ingrese su DNI"
                android:textAlignment="viewStart"
                android:textColor="#F2D680"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/txtDni"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#F2CB57"
                android:ems="10"
                android:fontFamily="@font/roboto_bold"
                android:hint="Dni"
                android:inputType="number"
                android:textColor="#FFFFFF"
                android:textColorHint="#BAFBFBFB" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:paddingTop="15dp"
                android:text="Ingrese su Nombre"
                android:textAlignment="viewStart"
                android:textColor="#F2D680"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/txtNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#F2D680"
                android:ems="10"
                android:fontFamily="@font/roboto_bold"
                android:hint="Nombre"
                android:inputType="text"
                android:textColor="#FFFFFF"
                android:textColorHint="#B4FBFBFB" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:paddingTop="20dp"
                android:text="Ingrese sus Apellidos"
                android:textAlignment="viewStart"
                android:textColor="#F2D680"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/txtApellido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#F2CB57"
                android:ems="10"
                android:fontFamily="@font/roboto_bold"
                android:hint="Apellidos"
                android:inputType="text"
                android:textColor="#FFFFFF"
                android:textColorHint="#BAFBFBFB" />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:paddingTop="15dp"
                android:text="Eliga su genero"
                android:textAlignment="viewStart"
                android:textColor="#F2D680"
                android:textSize="15dp" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rbtFemenino"
                    android:layout_width="174dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Femenino"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:checked="true" />/>

                <RadioButton
                    android:id="@+id/rbtMasculino"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Masculino"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:paddingTop="15dp"
                android:text="Ingrese su Telefono"
                android:textAlignment="viewStart"
                android:textColor="#F2D680"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/txtTelefono"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#F2D680"
                android:ems="10"
                android:fontFamily="@font/roboto_bold"
                android:hint="Telefono"
                android:inputType="number"
                android:textColor="#FFFFFF"
                android:textColorHint="#B4FBFBFB" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:paddingTop="15dp"
                android:text="Ingrese su Correo"
                android:textAlignment="viewStart"
                android:textColor="#F2D680"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/txtCorreo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#F2D680"
                android:ems="10"
                android:fontFamily="@font/roboto_bold"
                android:hint="Email"
                android:inputType="text|textEmailAddress"
                android:paddingBottom="15dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#B4FBFBFB" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="25dp">

                <Button
                    android:id="@+id/btnRegistrar"
                    android:layout_width="238dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="#D7B34E"
                    android:text="Registrar" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>